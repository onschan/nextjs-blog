{
  "endOfLine": "auto",
  "semi": true,
  "printWidth": 100,
  "tabWidth": 2,
  "singleQuote": false,
  "trailingComma": "es5",
  "useTabs": false,
  "arrowParens": "avoid",
  "bracketSpacing": true,
  "importOrderSeparation": true,
  "importOrder": [
    "^(@/pages)(.*|$)",
    "^(@/components/_common)(.*|$)",
    "^(@/components)(.*|$)",
    "^(@/hooks)(.*|$)",
    "^(@/types)(.*|$)",
    "^(@/constants/)(.*|$)",
    "^(@/assets/)(.*|$)",
    "^(@/styles)(.*|$)",
    "^(./styles)(.*|$)",
    "^(./)(.*|$)"
  ]
}
